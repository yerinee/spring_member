 <update id="update" parameterType="map">
    update PROJECTS
    <set>
        <if test="title != null">PNAME=#{title},</if>
        <if test="content != null">CONTENT=#{content},</if>
        <if test="startDate != null">STA_DATE=#{startDate},</if>
        <if test="endDate != null">END_DATE=#{endDate},</if>
        <if test="state != null">STATE=#{state},</if>
        <if test="tags != null">TAGS=#{tags},</if>
    </set>
    where PNO = #{no}
</update>
 
 
 
 <select id="search" resultType="MemberVo" parameterType="map">
	select *
	from(
	    select rownum rn ,a.*
	    from (select * 
	     from users
	     <if test="search != ' '">	
	  	 where ${searchType} LIKE '%' || #{content} || '%'	
		 </if>
	   
	      order by userid) a)
		
	where rn between (#{page} -1) * #{pageSize} +1 and #{page} * #{pageSize}

 </select>
 
 
 
  <select id="searchcount" resultType="int" parameterType="map">
	SELECT count(*)
	FROM users	
	WHERE ${searchType} LIKE '%' || #{content} || '%'	
	
 </select>

 
 
 
  
</mapper>